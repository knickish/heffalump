#include "helloWorld_Rsc.h"
DATA "code" ID 1 "code0001.bin"

APPLICATIONICONNAME ID 100 "Heffalump"
APPLICATION         ID 1 "LFhe"
VERSION             ID 1 "1.0.0gcc"

ICONFAMILY "largeicon_1bpp.bmp" "" "" "" TRANSPARENT 0 255 0
SMALLICONFAMILY "largeicon_1bpp.bmp" "" "" "" TRANSPARENT 0 255 0

BITMAPFAMILY ID BmpFamilyAppIcon "largeicon_1bpp.bmp" "" "" "" COMPRESS TRANSPARENT 0 255 0


FORM ID MainForm AT (0 0 160 160)
MENUID MainMenuBar
USABLE
BEGIN
    TITLE "Heffalump"
    LABEL "Enter your name below:" AUTOID at (0 17) FONT 1
    FIELD ID MainNameField AT (PrevLeft PrevBottom 159 13)
        UNDERLINED AUTOSHIFT MAXCHARS 40
    BUTTON "Say Hello" ID MainHelloButton
        AT (1 147 AUTO AUTO)
    BUTTON "Say Goodbye" ID MainGoodbyeButton
        AT (PrevRight+5 PrevTop AUTO AUTO)
    GRAFFITISTATEINDICATOR AT (140 PrevTop)
END

MENU ID MainMenuBar
BEGIN
    PULLDOWN "Edit"
    BEGIN
        MENUITEM "Undo"             EditUndo            "U"
        MENUITEM "Cut"              EditCut             "X"
        MENUITEM "Copy"             EditCopy            "C"
        MENUITEM "Paste"            EditPaste           "P"
        MENUITEM "SelectAll"        EditSelectAll       "S"
        MENUITEM "-"                AUTOID
        MENUITEM "Keyboard"         EditKeyboard        "K"
        #ifdef PALMOS_GE_V_2
        MENUITEM "Graffiti Help"    EditGraffitiHelp    "G"
        #endif
    END
    PULLDOWN "Options"
    BEGIN
        MENUITEM "About Hello World 2" OptionsAboutHelloWorld2
    END
END

FORM ID AboutForm AT (2 2 156 156)
USABLE MODAL SAVEBEHIND
BEGIN
    TITLE "About Hello World 2"
    FORMBITMAP AT (7 19) BITMAP BmpFamilyAppIcon
    LABEL "ABOUT HELLO WORLD 2" AUTOID AT (37 18) FONT 2
    LABEL "Compiled with with gcc 9.1 and PilRC 3.2" AUTOID AT (37 32)
    BUTTON "OK" AboutOKButton AT (58 134 40 12)
END

ALERT ID HelloAlert
    INFORMATION
BEGIN
    TITLE "Hello, world"
    MESSAGE "Good day to you, ^1."
    BUTTONS "OK"
END

ALERT ID GoodbyeAlert
    INFORMATION
BEGIN
    TITLE       "Goodbye, world"
    MESSAGE    "Fare thee well, ^1."
    BUTTONS     "OK"
END